{% extends "backOffice.html.twig" %}
{% block leftNavBar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Matières</a>
        </li>
    </ul>
{% endblock%}
{% block cards %}
    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
    <!-- Flashy depends on jQuery -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Load Flashy default JavaScript -->
    <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <div class="content-wrapper">
    <div class="container-fluid">
{{ form(f,{'attr':{'novalidate':'novalidate'}}) }}
        {% if matieres is empty %}
        <center><p>Aucune matière n'a été ajoutée</p></center>
        {% else %}
<table class="table table-striped">
    <thead>
        <th></th>
        <th></th>
        <th>Nom de la matiere</th>
        <th>Niveau concerné</th>
        <th>Modifier</th>
        <th>Supprimer</th>
    </thead>
    <tr {% for m in matieres %}>
        <td></td>
        <td></td>
        <td>{{ m.id }}</td>
        <td>{{ m.niveau.id }}</td>
        <td><a href="{{ path("modifMatiere",{'id':m.id}) }}" class="btn btn-outline-info"><i class="fas fa-pen"></i></a></td>
        <td><a href="{{ path("suppMatiere",{'id':m.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Supprimer ce document?')"><i class="fas fa-trash"></i></a></td>
    </tr {% endfor %}>
    {% endif %}
</table>
    </div>
    </div>
    </br>
    {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
{% endblock %}
