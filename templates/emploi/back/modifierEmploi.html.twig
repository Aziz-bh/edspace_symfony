{% block cards %}
    <div class="content-wrapper"> <!-- don't delete this line-->
        <section class="content-header">
            <div class="container-fluid"> <!-- don't delete this line-->
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Modifier une offre</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Acceuil</a></li>
                        <li class="breadcrumb-item active">Emploi</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <section class="content">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto">
            <div class="card card-primary">
                <div class="card-header">
                <h3 class="card-title">{{form_title}}</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                    </button>
                </div>
                </div>
                <div class="card-body">
                {{form_start(form_add,{'attr': {'novalidate': 'novalidate'}})}}
                {{ form_row(form_add.title) }}
                {{ form_row(form_add.content) }}
                {{ form_row(form_add.date) }}
                {{form_row(form_add.categoryName)}}
                {{form_row(form_add.image)}}
                {{form_row(form_add.ajouter, { 'label': 'Modifier' }) }}
                {{form_end(form_add)}}
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            {{form_end(form_add)}}
            </div>
        </div>
    </section>
    <!-- /.content -->
    </div>
{% endblock %}
