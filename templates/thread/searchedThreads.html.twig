<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>Joson</title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="{{ asset('frontOffice/css/bootstrap.css') }}" />
    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700|Poppins:400,600,700&display=swap" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="{{ asset('frontOffice/css/style.css') }}" rel="stylesheet" />
    <!-- responsive style -->
    <link href="{{ asset('frontOffice/css/responsive.css') }}" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/v4-shims.min.js" integrity="sha512-7qQljqOcfujtn+H4jLGbhDviLED/sMZ+gnJeExpfXKLQMzuOT0/3mGaqUgbqjAPrMsDMZ/6uVNqtXuallND7WQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
<div class="hero_area">
                <!-- header section strats -->
                {% block header %}
                <header class="header_section">
                    <div class="container-fluid">
                        <nav class="navbar navbar-expand-lg custom_nav-container ">
                            <a class="navbar-brand" href="#">
                                <h3>
                                    Joson
                                </h3>
                                <span> college</span>
                            </a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse ml-auto" id="navbarSupportedContent">
                                <ul class="navbar-nav  ml-auto">
                                    {% block nav %}
                                        <li class="nav-item active">
                                            <a class="nav-link" href="#">Tableau d'affichage</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/thread">Forum<span class="sr-only">(current)</span></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href={# {{ path('displayClub') }} #}>Clubs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Offres d'emploi</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href={# {{ path('listDocuments') }} #}>Centre de partage</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Mon profile</a>
                                        </li>
                                    {% endblock %}
                                </ul>
                                <form class="form-inline my-2 my-lg-0 ml-0 ml-lg-4 mb-3 mb-lg-0">
                                    <button class="btn  my-2 my-sm-0 nav_search-btn" type="submit"></button>
                                </form>
                            </div>
                        </nav>
                    </div>
                </header>
                {% endblock %}




                <div>
                <h3><footer class="blockquote-footer text-right"> <cite title="Source Title">What are you seeking today ?</cite></footer></h3>
                </div>
                <div class="container">
                


                </div>
                <div class="input-group">
                    
                        {{ render(controller('App\\Controller\\SearchController::searchBar')) }}
                </div>
                <br>
                <div style="margin-left: 1370px">
                    <a href="{{ path('thread_new') }}" class="btn btn-secondary">Create new</a>
                </div>
            <table class="table table-bordered table-dark">
            <thead>
                <tr>
                
                <th scope="col">Question</th>
                <th scope="col">Topic</th>
                
                </tr>
            </thead>
            <tbody>
            {% for thread in posts %}
                <tr>
                <td><a href="{{ path('thread_show', {'id': thread.id})}}">{{ thread.question }} </a><small class="text-success col-xs-12 blockquote-footer text-right">{{ thread.postDate ? thread.postDate|date('Y-m-d H:i:s') : '' }} <td>{{ thread.threadtype }}</td></small></td>
                
                </tr>
                
                {% endfor %}
            </tbody>
            </table>




            <script type="text/javascript" src="{{ asset('frontOffice/js/jquery-3.4.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('frontOffice/js/bootstrap.js') }}"></script>
                
</div>
</body>
</html>