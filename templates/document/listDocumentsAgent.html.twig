{% extends "backOffice.html.twig" %}
{% block leftNavBar %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href={{ path('choixNiveau',{'role':0}) }} class="nav-link">Centre de partage</a>
        </li>
    </ul>
{% endblock%}
{% block cards %}
    <link rel="stylesheet" href="{{ asset('bundles/mercuryseriesflashy/css/flashy.css') }}">
    <!-- Flashy depends on jQuery -->
    <script src="//code.jquery.com/jquery.js"></script>
    <!-- Load Flashy default JavaScript -->
    <script src="{{ asset('bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    <div class="content-wrapper">
    <div class="container-fluid">
    </br>
    <center>
        <div class="row d-flex justify-content-center">
            <div>
        <form method="post" action="{{ path('listDocuments',{'role':0}) }}" >
            <select name="matiereKey" id="matiereKey" class="border">
                <option disabled selected> -- Sélectionnez une matière -- </option>
                {% for m in matieres %}
                    <option>{{ m.id }}</option>
                {% endfor %}
            </select>
            <button class="btn btn-info">Rechercher</button>
        </form>
        </div>
        <div>
        <a href="{{ path('choixNiveau',{'role':0}) }}" class="btn btn-link">Réinitialiser</a>
        </div>
        </div>
    </center>

    </br>
    <center>
        <table class="table table-striped">
            <thead>
            <th></th>
            <th></th>
            <th>Niveau</th>
            <th>Matière</th>
            <th>Fichier</th>
            <th>Date d'insertion</th>
            <th>Propriétaire</th>
            <th></th>
            <th></th>
            </thead>
            <tr {% for d in documents %}>
                <td></td>
                <td></td>
                <td>{{ d.niveau.id }}</td>
                <td>{{ d.matiere.id }}</td>
                <td><a href="{{ asset('documents/'~d.nom) }}" type=d.type download>{{ d.nom }}</a> </td>
                <td>{{ d.dateinsert }}</td>
                <td>{{ d.proprietaire }}</td>
                <td><a target="_blank" href="{{ path("apercuDocument",{'id':d.id}) }}" class="btn btn-outline-primary"><i class="fas fa-eye"></i></a>
                <td><a href="{{ path("suppDocument",{'id':d.id,'role':0}) }}" class="btn btn-outline-danger" onclick="return confirm('Supprimer ce document?')"><i class="fas fa-trash"></i></a>
            </tr {% endfor %}>
        </table>
    </center>
    </br>
    </div>
    </div>
    {{ include('@MercurySeriesFlashy/flashy.html.twig') }}

{% endblock %}