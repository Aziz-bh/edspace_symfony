{% block custom %}
    </br>
    <center>
        {% set cuEt="Meriam2" %}
        <table class="table table-striped">
            <thead>
            <th></th>
            <th></th>
            <th>Niveau</th>
            <th>Matière</th>
            <th>Fichier</th>
            <th>Date d'insertion</th>
            <th>Propriétaire</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            </thead>
            <tr {% for d in docsInFav %}>
                <td></td>
                <td></td>
                <td>{{ d.document.niveau.id }}</td>
                <td>{{ d.document.matiere.id }}</td>
                <td><a href="{{ path('afficheDocument',{'id':d.document.id})}}">{{ d.document.nom }}</a> </td>
                <td>{{ d.document.dateinsert }}</td>
                <td>{{ d.document.proprietaire }}</td>
                {% if cuEt==d.document.proprietaire %}
                    <td><a href="{{ path("modifDocument",{'id':d.document.id}) }}" class="btn btn-outline-info"><i class="fas fa-pen"></i></a></td>
                    <td><a href="{{ path("suppDocument",{'id':d.document.id,'role':1}) }}" class="btn btn-outline-danger" onclick="return confirm('Supprimer ce document')"><i class="fas fa-trash"></i></a>
                {% else %}
                    <td>-</td>
                    <td>-</td>
                {% endif %}
                <td><a href="{{ path("shareDoc",{'id':d.document.id}) }}" class="btn btn-outline-success"><i class="fas fa-share"></i></a>
                <td><a href="{{ path("signalDoc",{'id':d.document.id,'role':1}) }}" class="btn btn-outline-warning" onclick="return confirm('Signaler ce document')"><i class="fas fa-exclamation-triangle"></i></a>
                <td><a href="{{ path("unPinDocFavoris",{'id':d.document.id,'role':1}) }}" class="btn btn-outline-info"><i class="fas fa-heart-broken"></i></a></td>
                <td></td>
            </tr {% endfor %}>
        </table>
    </center>
